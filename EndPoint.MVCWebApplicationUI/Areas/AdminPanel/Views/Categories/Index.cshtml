@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using EStor.Application.Services.Products.QueriesService.GetCategories;
@model List<EStor.Application.Services.Products.QueriesService.GetCategories.CategoriesDto>
@{
    ViewData["Title"] = "دسته بندی محصولات";
    Layout = "_AdminTemplateLayout";
}

<div class="content-wrapper">
    <div class="container-fluid">
        <!-- Zero configuration table -->
        <section id="configuration">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title-wrap bar-success">
                                <h4 class="card-title">لیست دسته بندی ها</h4>
                            </div>
                        </div>
                        <div class="card-body collapse show">
                            <div class="card-block card-dashboard">
                                <p class="card-text">دسته بندی محصولات فروشگاه کالا مارکت</p>
                                <a href="/adminpanel/categories/addnewcategory" class="btn mr-1 btn-round shadow-z-2 btn-success">افزودن دسته بندی جدید برای محصولات سایت</a>

                                <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                                    <div class="col-sm-12">
                                        <table class="table table-striped table-bordered zero-configuration dataTable" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                                            <thead>
                                                <tr role="row">
                                                    <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="دسته بندی: activate to sort column descending" style="width: 222px;">دسته بندی</th>
                                                    <th class="sorting_asc" tabindex="1" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="پدر: activate to sort column descending" style="width: 222px;">پدر</th>
                                                    <th class="sorting_asc" tabindex="2" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label=": activate to sort column descending" style="width: 222px;"></th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                @foreach (var categories in Model)
                                                {
                                                    <tr role="row" class="odd">
                                                        <td class="sorting_1">@categories.CategoryName</td>
                                                        <td>
                                                            @{
                                                                string parent = categories.CategoryParent != null ? categories.CategoryParent.ParentName : "-";
                                                            }
                                                            <text> @parent </text>
                                                        </td>
                                                        <td>
                                                            @if (categories.CategoryParent == null)
                                                            {
                                                                <a href="~/adminpanel/categories/addnewcategory?ParentId=@categories.CategoryId" class="btn mr-1 btn-round shadow-z-2 btn-success">افزودن فرزند</a>
                                                            }

                                                            @if (categories.CategoryHasChild == true)
                                                            {
                                                                <a href="~/adminpanel/categories/index?ParentId=@categories.CategoryId" class="btn mr-1 btn-round shadow-z-2 btn-info">مشاهده لیست فرزند ها </a>
                                                            }
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
